{
  "expo": {
    "name": "lightsout",
    "slug": "lightsout",
    "version": "1.0.0",
    "scheme": "lightsout",
    "platforms": ["ios", "android"],
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-font",
      "expo-localization",
      "react-native-wifi-reborn",
      "expo-video",
      "expo-sqlite",
      [
        "expo-splash-screen",
        {
          "backgroundColor": "#ffffff",
          "image": "./assets/splash-light.png", // light mode version
          "resizeMode": "contain",
          "imageWidth": 180, // optional - adjust size
          "dark": {
            "backgroundColor": "#000000", // or "#121212", etc.
            "image": "./assets/splash-dark.png", // dark mode version
            "resizeMode": "contain"
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "tsconfigPaths": true
    },
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "LightsOut uses your location to provide accurate local time and weather context during your focus sessions.",
        "NSBrightnessUsageDescription": "LightsOut needs access to your screen brightness to dim the display during your focus sessions.",
        "NSLocalNotificationsUsageDescription": "LightsOut uses notifications to keep you updated on your remaining focus time on the lock screen."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.amourhamisiomar.lightsout",
      "permissions": ["android.permission.ACCESS_FINE_LOCATION"]
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "60a59f0a-810d-494b-8119-fa4426756a02"
      }
    }
  }
}
